<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_row_group_money_balance"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_row="0"
    android:layout_rowWeight="1"
    android:layout_column="0"
    android:layout_columnWeight="1"
    android:layout_marginBottom="1dp"
    android:elevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/txt_expenditure_group_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/group"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_expenditure_group_name"
            android:text="@string/details"
            android:textColor="@color/mainDarkGreen"
            android:textSize="18sp"
            app:drawableEndCompat="@drawable/ic_baseline_arrow_right_26" />

        <TextView
            android:id="@+id/txt_expenditure_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="20dp"
            android:maxLines="1"
            android:text="Amount"
            android:textColor="@color/mainDarkGreen"
            android:textSize="28sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>