<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_row="0"
    android:layout_column="0"
    android:layout_rowWeight="1"
    android:layout_columnWeight="1"
    android:layout_margin="8dp"
    android:elevation="8dp"
    android:id="@+id/group_review_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/group_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/group"
            android:textColor="@color/mainDarkGreen"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/group_description_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/group_name_txt"
            android:text="@string/group_description"
            android:textColor="@color/mainDarkGreen"
            android:textSize="18sp"
            android:textStyle="italic"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>