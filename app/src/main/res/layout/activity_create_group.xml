<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".views.createGroup.CreateGroupActivity">
    <EditText
        android:id="@+id/group_name_etxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:autofillHints="@string/group_name"
        android:backgroundTint="@color/colorBasicText"
        android:drawableStart="@drawable/ic_baseline_group_26"
        android:drawablePadding="10dp"
        android:hint="@string/group_name"
        android:inputType="text"
        android:maxLines="1"
        android:textColor="@color/colorBasicText"
        android:textStyle="italic" />
    <EditText
        android:id="@+id/group_description_etxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/group_name_etxt"
        android:layout_marginTop="50dp"
        android:autofillHints="@string/group_description"
        android:backgroundTint="@color/colorBasicText"
        android:drawableStart="@drawable/ic_baseline_short_text_24"
        android:drawablePadding="10dp"
        android:hint="@string/group_description"
        android:inputType="text"
        android:textColor="@color/colorBasicText"
        android:textStyle="italic" />
    <Button
        android:id="@+id/save_group_btn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"

        android:text="@string/save" />

</RelativeLayout>