<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_task_no_date_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_row="0"
    android:layout_column="0"
    android:layout_rowWeight="1"
    android:layout_columnWeight="1"
    android:layout_margin="8dp"
    android:elevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/id_task_no_date_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/task_name"
            android:textColor="@color/mainDarkGreen"
            android:textSize="18sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/id_task_no_date_done_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:background="@drawable/checkbox_selector"
            android:button="@null"
            android:gravity="center_vertical"
            android:scaleX="0.7"
            android:scaleY="0.7" />

        <ImageView
            android:id="@+id/id_task_no_date_type_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="24dp"
            android:layout_toStartOf="@+id/id_task_no_date_done_btn" />

        <RelativeLayout
            android:id="@+id/id_task_no_date_expanded_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_task_no_date_name_txt"
            android:layout_marginTop="20dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/id_task_without_date_update_txt_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/update"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/id_task_without_date_delete_txt_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/id_task_without_date_update_txt_btn"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/delete"
                android:textSize="18sp" />

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>